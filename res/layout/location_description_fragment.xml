<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:fillViewport="true">

	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fillViewport="true">

		<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/Location.Name"
					android:textAppearance="@style/LocationDescription.Name"
					android:layout_marginBottom="@dimen/LocationDescription.Margin.Bottom"
					android:id="@+id/LocationDescription.Name"
					/>

			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">


				<ImageView
                        android:id="@+id/LocationDescription.Image"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:contentDescription="@string/LocationDescription.Image"
						android:background="@drawable/icon_add_location" />

				<LinearLayout
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

					<LinearLayout
							android:orientation="horizontal"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginBottom="@dimen/LocationDescription.Margin.Bottom">
						<TextView
								android:layout_width="wrap_content"
								android:layout_height="match_parent"
								android:layout_marginRight="@dimen/LocationDescription.Margin.Right"
								android:text="@string/Location.Status" />
						<TextView
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:id="@+id/LocationDescription.Status"/>
					</LinearLayout>

					<LinearLayout
							android:orientation="horizontal"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginBottom="@dimen/LocationDescription.Margin.Bottom">
						<TextView
								android:layout_width="wrap_content"
								android:layout_height="match_parent"
								android:layout_marginRight="@dimen/LocationDescription.Margin.Right"
								android:text="@string/Location.Rating" />
						<TextView
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:id="@+id/LocationDescription.Rating"/>
					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/LocationDescription.Margin.Bottom">
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginRight="@dimen/LocationDescription.Margin.Right"
						android:text="@string/Location.Description" />
				<TextView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:id="@+id/LocationDescription.Description"/>
			</LinearLayout>

			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/LocationDescription.Margin.Bottom">
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:text="@string/Location.Address"
						android:layout_marginRight="@dimen/LocationDescription.Margin.Right"/>
				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/LocationDescription.Address"/>
			</LinearLayout>

			<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
				<TextView
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:text="@string/Location.CreatedByAccount"
						android:layout_marginRight="@dimen/LocationDescription.Margin.Right"/>
				<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/LocationDescription.CreatedBy"/>
			</LinearLayout>

		</LinearLayout>

	</ScrollView>

</LinearLayout>