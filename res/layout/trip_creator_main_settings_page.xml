<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="@dimen/WizardPageMainLayout.Margin.Left"
              android:layout_marginRight="@dimen/WizardPageMainLayout.Margin.Right"
              android:gravity="center">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView2">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/WizardPageMainLayout.Margin.Top">


                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableBottom="@drawable/icon_arrow_left"
                        android:background="@android:color/transparent"
                        android:id="@+id/TripCreatorMainSettingsPage.PageBackButton"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAppearance="@style/WizardPage.Title"
                        android:text="@string/TripCreatorMainSettingsPage.Title"
                        android:layout_marginBottom="@dimen/WizardPageElement.Margin.Bottom"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:id="@+id/TripCreatorMainSettingsPage.Title"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableBottom="@drawable/icon_arrow"
                        android:background="@android:color/transparent"
                        android:id="@+id/TripCreatorMainSettingsPage.PageForwardButton"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/WizardPageMainLayout.Margin.Left"
                    android:layout_marginRight="@dimen/WizardPageMainLayout.Margin.Right"
                    android:gravity="center">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/WizardPage.SmallText"
                        android:text="@string/TripCreatorMainSettingsPage.TripNameLabel"
                        android:layout_marginBottom="@dimen/WizardPageSmallText.Margin.Bottom"
                        android:id="@+id/TripCreatorMainSettingsPage.TripNameLabel"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:layout_marginBottom="@dimen/WizardPageElement.Margin.Bottom"
                        android:id="@+id/TripCreatorMainSettingsPage.TripNameEditText"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/WizardPage.SmallText"
                        android:text="@string/TripCreatorMainSettingPage.TripDescriptionLabel"
                        android:layout_marginBottom="@dimen/WizardPageSmallText.Margin.Bottom"
                        android:id="@+id/TripCreatorMainSettingPage.TripDescriptionLabel"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:layout_marginBottom="@dimen/WizardPageElement.Margin.Bottom"
                        android:id="@+id/TripCreatorMainSettingPage.TripDescriptionEditText"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/WizardPage.SmallText"
                        android:text="@string/TripCreatorMainSettingsPage.TripStartDate"
                        android:id="@+id/textView7"/>

                <DatePicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/WizardPageElement.Margin.Bottom"
                        android:calendarViewShown="false"
                        android:id="@+id/TripCreatorMainSettingsPage.TripStartDatePicker"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/WizardPage.SmallText"
                        android:text="@string/TripCreatorMainSettingsPage.TripEndDate"
                        android:id="@+id/textView8"/>

                <DatePicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/WizardPageElement.Margin.Bottom"
                        android:calendarViewShown="false"
                        android:id="@+id/TripCreatorMainSettingsPage.TripEndDatePicker"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginBottom="@dimen/WizardPageSmallText.Margin.Bottom"
                        android:text="@string/TripCreatorMainSettingsPage.DistanceUnitSpinnerLabel"
                        android:id="@+id/textView"/>

                <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/WizardPageElement.Margin.Bottom"
                        android:id="@+id/TripCreatorMainSettingsPage.DistanceUnitSpinner"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginBottom="@dimen/WizardPageSmallText.Margin.Bottom"
                        android:text="@string/TripCreatorMainSettingsPage.TravelModeSpinnerLabel"
                        android:id="@+id/textView2"/>

                <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/WizardPageElement.Margin.Bottom"
                        android:id="@+id/TripCreatorMainSettingsPage.TravelModeSpinner"/>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>