<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="5">

    <!-- Container for Map Fragment -->
    <RelativeLayout android:id="@+id/TripCreator_TripDayLocation_Map"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"/>

    <view
            class="pl.edu.agh.activities.tripCreator.SortableLocationListView"
            android:id="@+id/TripCreator_TripDayLocation_List"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

    <Button android:id="@+id/TripCreator_TripDayLocation_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SynchronizationButton"
            android:text="@string/TripCreator.TripDayLocation.Button"/>

</LinearLayout>