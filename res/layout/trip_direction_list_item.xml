<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/TripDetails.TripDirection.Instruction"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ShowTrips.TripItem.NameRowHeight"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="@string/TripDirection.Instruction"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ShowTrips.TripItem.DateRowHeight">

        <TextView
                android:id="@+id/TripDetails.TripDirection.Distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/TripDirection.Distance"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/TripDetails.TripDirection.Separator"/>
        <TextView
                android:id="@+id/TripDetails.TripDirection.Duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/TripDirection.Duration"/>

    </LinearLayout>

</LinearLayout>