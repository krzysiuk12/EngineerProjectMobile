<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/Layout.Margin">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/Layout.Label.Margin.Right"
                                android:text="@string/Location.Name"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                        <EditText
                                android:id="@+id/AddLocation.LocationNameEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/Layout.Label.Margin.Right"
                                android:text="@string/Location.Description"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                        <EditText
                                android:id="@+id/AddLocation.LocationDescriptionEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/Layout.Label.Margin.Right"
                                android:text="@string/Location.Status"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                        <Spinner
                                android:id="@+id/AddLocation.StatusSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/Layout.Label.Margin.Right"
                                android:text="@string/Location.UsersPrivate"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                        <CheckBox
                                android:id="@+id/AddLocation.UsersPrivateCheckbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="visible"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/Layout.Margin">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/Layout.Label.Margin.Right"
                                android:text="@string/Location.Address"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <EditText
                                    android:id="@+id/AddLocation.Address.Street.EditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:hint="@string/Address.Street"/>
                            <EditText
                                    android:id="@+id/AddLocation.Address.City.EditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:hint="@string/Address.City"/>
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                <EditText
                                        android:id="@+id/AddLocation.Address.PostalCode.EditText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:inputType="textPostalAddress"
                                        android:hint="@string/Address.PostalCode"/>
                                <EditText
                                        android:id="@+id/AddLocation.Address.Country.EditText"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        android:layout_weight="2"
                                        android:hint="@string/Address.Country"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/Layout.Label.Margin.Right"
                        android:text="@string/Location.Name"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                        android:id="@+id/AddLocation.Rating.EditText"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:inputType="textPostalAddress"
                        android:text="@string/Location.Rating"
                        android:hint="@string/Location.Rating"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>